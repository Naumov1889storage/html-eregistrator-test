.row {
  display: flex;
  flex-direction: row;
}

.column {
  display: flex;
  flex-direction: column;
}

.container {
  margin: 0 auto
  padding: 0 15px 0 15px
  max-width: 2500px
  width: 100%
}

.header, .footer, .sidebar {
  display: flex
  justify-content: center
  align-items: center
  height: 100px
  padding: 20px
  text-align: center
  background: grey
  font-size: 20px
  font-family: arial
  text-transform: uppercase
}
.sidebar {
  width: 300px
  height: 600px
  background: lighten(grey, 30%)
}

.content {
  width: 100%
  padding: 20px
}

@media (max-width: 800px) {
  .main-section {
    &__wrap {
      flex-direction: column
    }
    &__sidebar {
      width: 100%
      height: 200px
    }
  }
}