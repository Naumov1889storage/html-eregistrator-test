                script.
                    function eregistrator_validate() {
                        let requiredItems = document.querySelectorAll('.eregistrator-block__item_required');
                        let passed = true;

                        for(let i=0; i<requiredItems.length; i++) {
                            requiredInput = requiredItems[i].querySelector(".eregistrator-block__input");
                            if(requiredInput.value === "") {
                                requiredItems[i].classList.add("eregistrator-block__item_alert");
                                passed = false
                            } else {
                                requiredItems[i].classList.remove("eregistrator-block__item_alert");
                            }
                        }

                        if (passed === false) {
                            return false
                        }
                    }

                    function setEregistratorStyleOnWidth() {
                        let eregistratorBlock = document.querySelector(".eregistrator-block");
                        let eregistratorBlockWidth = eregistratorBlock.offsetWidth;
                        if (eregistratorBlockWidth > 1599) {
                            eregistratorBlock.classList.add("eregistrator-block_width_extra-large");
                            eregistratorBlock.classList.remove("eregistrator-block_width_large");
                            eregistratorBlock.classList.remove("eregistrator-block_width_medium");
                            eregistratorBlock.classList.remove("eregistrator-block_width_small");
                        } else if (eregistratorBlockWidth >= 1024 && eregistratorBlockWidth <= 1599) {
                            eregistratorBlock.classList.remove("eregistrator-block_width_extra-large");
                            eregistratorBlock.classList.add("eregistrator-block_width_large");
                            eregistratorBlock.classList.remove("eregistrator-block_width_medium");
                            eregistratorBlock.classList.remove("eregistrator-block_width_small");
                        } else if (eregistratorBlockWidth >= 640 && eregistratorBlockWidth <= 1023) {
                            eregistratorBlock.classList.remove("eregistrator-block_width_extra-large");
                            eregistratorBlock.classList.remove("eregistrator-block_width_large");
                            eregistratorBlock.classList.add("eregistrator-block_width_medium");
                            eregistratorBlock.classList.remove("eregistrator-block_width_small");
                        } else if (eregistratorBlockWidth <= 639) {
                            eregistratorBlock.classList.remove("eregistrator-block_width_extra-large");
                            eregistratorBlock.classList.remove("eregistrator-block_width_large");
                            eregistratorBlock.classList.remove("eregistrator-block_width_medium");
                            eregistratorBlock.classList.add("eregistrator-block_width_small");
                        }
                    }

                    setEregistratorStyleOnWidth();

                    window.addEventListener("resize", setEregistratorStyleOnWidth);

